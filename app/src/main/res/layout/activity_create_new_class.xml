<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CreateNewClassActivity"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of your class"
        android:id="@+id/classNameField"
        android:inputType="text" />

    <Spinner
        android:id="@+id/institutionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classNameField"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/departmentSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/institutionSpinner"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/createNewClassButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/departmentSpinner"
        android:layout_marginTop="16dp"
        android:text="Create" />

</RelativeLayout>