<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:paddingVertical="16dp"
    android:paddingHorizontal="50dp"
    android:gravity="center">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/myClassButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_filled_class_40"
        android:drawableTint="@color/purple_700"
        android:textColor="@color/purple_700"
        android:textSize="11sp"
        android:text="My Class" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/reminderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_filled_schedule_40"
        android:drawableTint="@color/purple_700"
        android:textColor="@color/purple_700"
        android:textSize="11sp"
        android:text="Reminder" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_filled_settings_40"
        android:drawableTint="@color/purple_700"
        android:textColor="@color/purple_700"
        android:textSize="11sp"
        android:text="Setting" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_filled_help_40"
        android:drawableTint="@color/purple_700"
        android:textColor="@color/purple_700"
        android:textSize="11sp"
        android:text="Help" />


    <!-- Add more buttons as needed -->

</GridLayout>